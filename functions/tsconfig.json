{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Enable output for build
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",

    // Node.js Lambda runtime targeting - CommonJS for better Lambda compatibility
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Output CommonJS modules
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["**/src/**/*"],
  "exclude": ["**/node_modules", "**/dist"]
}
