{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    // Override root config to enable type generation
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
